#include <stdio.h>
#include <math.h>

int main() {
    double a, b, c;
    double delta, x1, x2;

    printf("Nhập hệ số a: ");
    scanf("%lf", &a);
    printf("Nhập hệ số b: ");
    scanf("%lf", &b);
    printf("Nhập hệ số c: ");
    scanf("%lf", &c);

    delta = b * b - 4 * a * c;

    if (delta > 0) {
        x1 = (-b + sqrt(delta)) / (2 * a);
        x2 = (-b - sqrt(delta)) / (2 * a);
        printf("Phương trình có hai nghiệm phân biệt:\n");
        printf("x1 = %lf\n", x1);
        printf("x2 = %lf\n", x2);
    } else if (delta == 0) {
        x1 = -b / (2 * a);
        printf("Phương trình có nghiệm kép:\n");
        printf("x1 = x2 = %lf\n", x1);
    } else {
        printf("Phương trình vô nghiệm.\n");
    }

    return 0;
}
